@{
  Layout = "_Layout";
}

@using ToDoList.Models;

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
} 

<div id="list">
  @foreach(Category category in Model)
  {
    <div class="card">
      <div class="card-body">
        @Html.ActionLink($"{category.Name}", "Details", new { id = category.CategoryId })
      </div>
    </div>
  }
</div>
