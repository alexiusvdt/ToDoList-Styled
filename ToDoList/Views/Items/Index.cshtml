@{
  Layout = "_Layout";
}

@using ToDoList.Models;

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
}
else
{
  <ul>
  @foreach (Item item in Model)
    {
      @if (item.Complete)
      {
        <li><s>@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId })</s> | @item.Category.Name</li>
      }
      else
      {
        <li>@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId }) | @item.Category.Name | @item.DueDate</li>
      }
    }
  </ul>
}

<p>@Html.ActionLink("Add new item", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>